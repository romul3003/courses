<h1>Cart</h1>

<div id="cart">
  {{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button type="button" class="btn btn-small js-remove" data-id="{{id}}">
            Delete
          </button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Price: <span class="price">{{price}}</span></strong></p>

  <form action="/orders" method="POST">
    <button type='submit' class="btn">Make order</button>
  </form>
  {{else}}
  <p>The cart is empty</p>
  {{/if}}
</div>