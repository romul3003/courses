<h1>Cart</h1>

{{#if courses.length}}
<table>
  <thead>
     <tr>
    <th>Name</th>
    <th>Quantity</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>

    {{#each courses}}
    <tr>
      <td>{{title}}</td>
      <td>{{count}}</td>
      <td>
        <button type="button" class="btn btn-small">Delete</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<p><strong>Price: <span class="price">{{price}}</span></strong></p>
{{else}}
  <p>The cart is empty</p>
{{/if}}